<% @page_title = 'Current Users' %>

<%= content_tag('p', link_to('<--- Back', staff_path)) %>

<div class="userlist left">
	<%= render(:partial => 'listing') %>
</div>
<div class="userlist right">

	<% if params[:id].blank? %>
		<h1>New user</h1>
		<% form_tag(manage_users_path, :method => :post) do %>
		  <%= render :partial => 'form' %>
		  <%= submit_tag "Create", :style => 'margin: 1em 0 1em 310px;' %>
		<% end %>

	<% else %>

		<h1>Editing user</h1>

		<% form_tag(update_user_path(params[:id]), :method => :put) do %>
		  <%= render :partial => 'form' %>
		  <%= submit_tag 'Edit' %>
		<% end %>
    <%=  button_to "Delete User", user_del_path, :confirm => "'Are you sure you want to permanently delete this user?'", :method => :delete %>
	<% end %>

	<%= link_to 'Cancel', users_path %>
</div>
